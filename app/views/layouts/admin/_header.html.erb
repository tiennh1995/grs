<header class="main-header admin-header">
  <div class="logo">
    <span class="logo-lg">
      <%= link_to admin_root_path, class: "admin-logo" do %>
        <b>Game Prey</b>
      <% end %>
    </span>
  </div>

  <nav class="navbar navbar-static-top" role="navigation">
    <a href="#" class="sidebar-toggle admin-dropdown" data-toggle="offcanvas"
      role="button"></a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag current_user.avatar_url, class: "user-image" %>
            <span class="hidden-xs"><%= current_user.nick_name %></span>
          </a>
          <ul class="dropdown-menu dn-dropdown-menu admin-dropdown-menu">
            <li>
              <%= link_to "Log out", destroy_user_session_path,
                method: :delete %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
