var id = '<%= @comment.id %>';
$('.reply-comments-' + id).empty();
<% @reply_comments.each do |reply_comment| %>
  $('.reply-comments-' + id)
    .append('<%= j render "reply_comment", reply_comment: reply_comment %>');
<% end %>
$('.read-more.' + id).hide();
$('.hide-comment.' + id).css('display', 'inline-block');
