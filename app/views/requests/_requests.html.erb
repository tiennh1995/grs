<% requests.each_with_index do |_request, index| %>
  <tr class="request-<%= _request.id %>">
    <td><%= index + 1 %></td>
    <td><%= _request.game_name %></td>
    <td><%= _request.genre_info %></td>
    <td><%= _request.required %></td>
    <td><%= _request.info %></td>
    <td><%= l _request.created_at, format: :default %></td>
    <td>
      <span class="status <%= _request.status %>"><%= _request.status %></span>
    </td>
    <td>
      <button class="btn btn-default btn-request-edit">
        Edit
      </button>

      <%= link_to "Delete", user_request_path(current_user, _request),
        method: :delete, remote: true, data: {confirm: "Are you sure?"},
        class: "btn btn-danger btn-request-delete" %>
    </td>
  </tr>
<% end %>
<%= paginate requests, theme: "twitter-bootstrap-3" %>
