<div class="row">
  <div class="text-center">
    <h2>サインイン</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-lg-4 col-lg-offset-4">
    <div class="col-lg-12 groupsgin">
      <div class="col-lg-4 pdt10">
        <label>Eメール</label>
      </div>
      <div class="col-lg-8 pdl0">
        <%= f.email_field :email, autofocus: true, class: "form-control ", placeholder: "Your email" %>
      </div>
    </div>
    
    <div class="col-lg-12 groupsgin">
      <div class="col-lg-4 pdt10 ">
         <label>パースワード</label>
      </div>
      <div class="col-lg-8 pdl0">
        <%= f.password_field :password, autocomplete: "off", class: "form-control ", placeholder: "Your password" %>
      </div>
    </div>

  <% if devise_mapping.rememberable? -%>
      <div class="col-lg-offset-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
  <% end -%>
    <div class="col-lg-offset-4">
      <%= f.submit "サインイン", class: "btn btn-primary" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>




