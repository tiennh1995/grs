<div class="admin-game">
  <div class="container">
    <div class="col-log-12 col-md-12 col-sm-12 col-xs-12 admin-game-show">
      <div class="admin-game-name">
        <h3><%= @game.name %></h3>
        <hr>
      </div>

      <div class="admin-game-cover">
        <%= image_tag @game.cover, class: "img-responsive" %>
      </div>

      <div class="admin-game-genre">
        <p class="genre-title">Genres: </p>
        <% @game.genres.each do |genre| %>
          <%= view_genre @game.genres, genre %>
        <% end %>
      </div>

      <div class="admin-game-rate">
        <p class="rate-title">Rate: </p>
        <div class="col-md-3 col-lg-3 col-sm-4 col-xs-12 admin-game-rate-left">
          <h1><%= @game.avarage_rate %></h1>
          <div class="admin-game-sum-review">
            <i class="fa fa-user" aria-hidden="true"></i>
            Sum: <span><%= @game.reviews.size + @game.rates.size %></span>
          </div>
        </div>

        <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12 admin-game-rate-right">
          <ul>
            <li>
              <i class="fa fa-star" aria-hidden="true">5</i>
              <div class="bar bar-5">
                <span><%= @game.rate_five %></span>
              </div>
              <div class="clearfix"></div>
            </li>
            <li>
              <i class="fa fa-star" aria-hidden="true">4</i>
              <div class="bar bar-4">
                <span><%= @game.rate_four %></span>
              </div>
              <div class="clearfix"></div>
            </li>
            <li>
              <i class="fa fa-star" aria-hidden="true">3</i>
              <div class="bar bar-3">
                <span><%= @game.rate_three %></span>
              </div>
              <div class="clearfix"></div>
            </li>
            <li>
              <i class="fa fa-star" aria-hidden="true">2</i>
              <div class="bar bar-2">
                <span><%= @game.rate_two %></span>
              </div>
              <div class="clearfix"></div>
            </li>
            <li>
              <i class="fa fa-star" aria-hidden="true">1</i>
              <div class="bar bar-1">
                <span><%= @game.rate_one %></span>
              </div>
              <div class="clearfix"></div>
            </li>
          </ul>
        </div>
        <div class="clearfix"></div>
      </div>

      <div class="admin-game-info-tab">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab"
            href="#information">Information</a>
          </li>
          <li><a data-toggle="tab" href="#require">Require</a></li>
          <li><a data-toggle="tab" href="#screenshot">Screen shots</a></li>
        </ul>

        <div class="tab-content">
          <div id="information" class="tab-pane fade in active">
            <p><%= raw @game.info %></p>
          </div>
          <div id="require" class="tab-pane fade">
            <p><%= raw @game.required %></p>
          </div>
          <div id="screenshot" class="tab-pane fade">
            <div class="w3-content w3-display-container">
              <% @game.screenshots.each do |screenshot| %>
                <%= image_tag screenshot.image_url,
                  class: "img-responsive mySlides" %>
              <% end %>

              <button class="w3-button w3-black w3-display-left">
                &#10094;</button>
              <button class="w3-button w3-black w3-display-right">
                &#10095;</button>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
      <hr>

      <div class="admin-game-action">
        <%= link_to "Edit this game", edit_admin_game_path,
          class: "btn btn-default" %>
        <%= link_to "Delete this game", admin_game_path(@game), remote: true,
          method: :delete, class: "btn btn-danger",
          data: {confirm: "Are you sure? Delete game: '#{@game.name}'"} %>
      </div>
      <hr>
    </div>
  </div>
</div>
